{
	"ts-node": {
		"esm": true
	},
	"compilerOptions": {
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"jsx": "react",
		"target": "ESNext",
		"rootDir": "./",
		"outDir": "./types",
		"preserveConstEnums": true,
		"module": "esnext",
		"moduleResolution": "nodenext",
		"noImplicitAny": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"types": [
			"jest",
			"node"
		],
		"baseUrl": ".",
		"paths": {
			"#/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules",
		"cypress/**"
	]
}